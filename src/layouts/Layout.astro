---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import { ClientRouter } from "astro:transitions"
import "../styles/global.css"
import "react-toastify/dist/ReactToastify.css"

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Desarrollador web junior creativo: Crea sitios web y mejora la experiencia del usuario."
    />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/png"
      href="/img/logo-ad.png"
    />
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <ClientRouter />
    <title>{title}</title>
  </head>
  <body class="h-screen selection:bg-zinc-500">
    <header class="mx-auto mt-20 w-full md:w-5/6 lg:w-2/5">
      <Header />
    </header>

    <main class="mx-auto mb-10 w-full md:mb-20 md:w-5/6 lg:w-2/5">
      <slot />
    </main>

    <footer>
      <Footer />
    </footer>
  </body>
</html>

<style is:global>
  html {
    line-height: 1.5;
    background-color: #00020d;
    color: #fff;
  }
  body {
    font-family: "Open Sans", sans-serif;
  }
</style>
